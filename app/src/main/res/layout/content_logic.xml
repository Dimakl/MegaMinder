<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_logic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notpixbigmind"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lera.megaminder.LogicActivity"
    tools:showIn="@layout/activity_logic">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/zeroorange" />

    <ImageView
        android:id="@+id/first1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/switch1"
        android:src="@drawable/oneorange" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:drawableLeft="@drawable/zeroorange" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch2"
        android:layout_toRightOf="@id/switch2"
        android:src="@drawable/oneorange" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch2"
        android:drawableLeft="@drawable/zeroorange" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch3"
        android:layout_toRightOf="@id/switch3"
        android:src="@drawable/oneorange" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch3"
        android:drawableLeft="@drawable/zeroorange" />

    <ImageView
        android:id="@+id/first4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch4"
        android:layout_toRightOf="@id/switch4"
        android:src="@drawable/oneorange" />

    <ImageView
        android:id="@+id/pipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/switch1"
        android:src="@drawable/goodpipes" />

    <ImageView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/switch1"
        android:src="@drawable/nicefirstand" />

    <ImageView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/switch1"
        android:src="@drawable/nicethirdand" />

    <ImageView
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/switch1"
        android:src="@drawable/lastnotand" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="400sp"
        android:background="@drawable/buttonmind"
        android:drawableLeft="@drawable/smallmind"
        android:text="OK"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/switch1"
        android:src="@drawable/ansone" />
    <Chronometer
        android:visibility="invisible"
        android:id="@+id/chrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/smallmind"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginLeft="400sp"/>

</RelativeLayout>
